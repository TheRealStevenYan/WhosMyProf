{
  "manifest_version": 2,

  "name": "Who's my prof?",
  "description": "An upcoming browser extension which will show RateMyProfessor ratings on UBC SSC course browser.",
  "version": "0.0",

  "browser_action": {
    "default_icon": "ui/icon.png",
    "default_popup": "ui/popup.html"
  },

  "content_scripts": [{
    "matches": ["*://courses.students.ubc.ca/*"],
    "css": ["src/styles.css"],
    "js": ["src/content.js"]
  }],

  "permissions": [
    "activeTab"
  ]
}